<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#797979" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <solid
                android:color="#ffffffff"/>

            <stroke android:width="2dp"
                android:color="@color/celeste_glup"
                />

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <size android:height="60dip"
                android:width="200dip"/>

            <corners android:bottomRightRadius="12dp" android:bottomLeftRadius="12dp"
                android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
        </shape>
    </item>
</layer-list>