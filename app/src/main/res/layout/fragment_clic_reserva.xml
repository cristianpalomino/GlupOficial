<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/cantReservas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <TextView
            android:layout_marginLeft="32dp"
            android:id="@+id/contReserva"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="0 Reservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ProgressBar
            android:id="@+id/temp_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ListView
            android:padding="16dp"
            android:id="@+id/recycler_prendas_reserva"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">
        <Button
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:id="@+id/confirmar_reserva"
            android:textAllCaps="false"
            android:shadowColor="@color/azul_glup"
            android:background="@drawable/button_selector"
            android:textColor="@color/celeste_glup"
            android:text="Confirmar Reserva"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
    </RelativeLayout>
</LinearLayout>