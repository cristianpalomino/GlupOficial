<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_item_prenda_reserva"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:id="@+id/reserva_tienda"
            android:textColor="@color/celeste_glup"
            android:textSize="18sp"
            android:text="Larcomar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/layout_prenda_local"
            android:layout_below="@+id/reserva_tienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/reserva_marca"
                android:textColor="@color/text_gris_glup"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="MYCH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/precio_parcial"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/reserva_tipo"
                android:textColor="@color/text_gris_glup"
                android:textSize="18sp"
                android:text="Polo Mandiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="17dp"
                android:layout_toRightOf="@+id/reserva_marca"
                android:layout_toEndOf="@+id/reserva_marca" />
            <TextView
                android:id="@+id/precio_parcial"
                android:textColor="@color/celeste_glup"
                android:textSize="18sp"
                android:text="S/.140"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/reserva_eliminar"
                android:layout_toStartOf="@+id/reserva_eliminar" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/reserva_eliminar"
                android:src="@drawable/tacho_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gris_glup"/>
    <RelativeLayout
        android:id="@+id/layout_total"
        android:visibility="gone"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/total_reserva"
            android:textColor="@color/celeste_glup"
            android:textSize="18sp"
            android:layout_marginRight="44dp"
            android:text="S/.140"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>