<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">
        <android.support.v4.view.ViewPager
            android:id="@+id/scroll_detalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            />

        <ImageView
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/atras_icon"
            android:id="@+id/cerrar_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />
        <ToggleButton
            android:textColor="@android:color/transparent"
            android:background="@drawable/detalle_info"
            android:layout_margin="5dp"
            android:id="@+id/info_detalle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/scroll_detalle"
            android:layout_alignEnd="@+id/scroll_detalle"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <Button
            android:textAllCaps="false"
            android:shadowColor="@color/azul_glup"
            android:background="@drawable/button_selector"
            android:textColor="@color/celeste_glup"
            android:id="@+id/btn_info"
            android:text="Detalles"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>