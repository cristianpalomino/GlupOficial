<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_below="@+id/header"
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
        <view
            android:id="@+id/middle"
            class="pe.com.glup.views.SquareLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="@android:color/transparent"
            android:orientation="vertical" />
        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#000000"
            android:orientation="vertical">

            <ImageView
                android:visibility="gone"
                android:src="@drawable/glup_logo"
                android:id="@+id/contador"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="Glup - 0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/title_lado"
                android:layout_gravity="center"
                android:text="Lado A"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/atras_camara"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center_vertical"
                android:background="@android:color/transparent"
                android:layout_margin="14dp"
                android:paddingLeft="0dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:src="@drawable/atras_camara" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_action_next" />

        </FrameLayout>
        <RelativeLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="180dp">
                <ImageView
                    android:visibility="gone"
                    android:elevation="10dp"
                    android:id="@+id/flash_automatico"
                    android:layout_margin="12dp"
                    android:src="@drawable/flash_automatico"
                    android:background="@android:color/transparent"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
                <ToggleButton
                    android:id="@+id/flash"
                    android:visibility="visible"
                    android:layout_margin="12dp"
                    android:textColor="@android:color/transparent"
                    android:background="@drawable/camara_flash"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
                <ToggleButton
                    android:id="@+id/refresh"
                    android:layout_margin="12dp"
                    android:textColor="@android:color/transparent"
                    android:background="@drawable/camara_actualizar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
                <ToggleButton
                    android:id="@+id/grid"
                    android:layout_margin="12dp"
                    android:textColor="@android:color/transparent"
                    android:background="@drawable/camara_grilla"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:alpha="0.8"
            android:background="#cc000000"
            android:orientation="horizontal">

            <ToggleButton
                android:textColor="@android:color/transparent"
                android:id="@+id/take"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/camarafooter"
                android:padding="20dp"
                android:src="@drawable/ic_take_photo" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/superior"
                    android:src="@drawable/icon_superior"
                    android:layout_width="62dp"
                    android:layout_height="62dp"/>
                <ImageView
                    android:id="@+id/medio"
                    android:visibility="gone"
                    android:src="@drawable/icon_medio"
                    android:layout_width="68dp"
                    android:layout_height="68dp"/>
            </LinearLayout>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/flashBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:background="@android:color/transparent"
                android:padding="20dp"
                android:src="@drawable/ic_action_flash" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="left|center_vertical">
                <ImageView
                    android:id="@+id/icon_preview"
                    android:clickable="false"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:src="@drawable/icon_preview"
                    android:layout_width="62dp"
                    android:layout_height="62dp"/>
                <ImageView
                    android:id="@+id/imageb"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="left|center"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:adjustViewBounds="true"
                    android:padding="1dp"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imagea"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="45dp"
                    android:adjustViewBounds="true"
                    android:padding="1dp"
                    android:scaleType="centerInside"
                    android:visibility="gone" />
            </FrameLayout>

            </FrameLayout>
    </RelativeLayout>
</FrameLayout>