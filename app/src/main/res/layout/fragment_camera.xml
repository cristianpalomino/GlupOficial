<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/select_prenda"
        android:alpha="0.9"
        android:background="@color/negro"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:elevation="10dp">
        <TextView
            android:id="@+id/titulo_select_prenda"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:text="Elige el tipo de prenda"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:padding="32dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:padding="15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/frame_select_superior"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/superior_icon"
                    android:id="@+id/select_superior_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/texto_select_superior"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text="Superior"
                        android:textColor="@color/blanco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
            </LinearLayout>
            <View
                android:id="@+id/rayita"
                android:layout_margin="6dp"
                android:layout_below="@+id/frame_select_superior"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blanco"/>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rayita"
                android:id="@+id/frame_select_medio"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/medio_icon"
                    android:id="@+id/select_medio_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/texto_select_medio"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:text=" Medio  "
                        android:textColor="@color/blanco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/content_camara"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_below="@+id/header"
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
        <view
            android:id="@+id/middle"
            class="pe.com.glup.views.SquareLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:background="@android:color/transparent"
            android:orientation="vertical" />
        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#000000"
            android:orientation="vertical">

            <ImageView
                android:visibility="gone"
                android:src="@drawable/glup_logo"
                android:id="@+id/contador"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="Glup - 0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/title_lado"
                android:layout_gravity="center"
                android:text="Lado Frontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/atras_camara"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center_vertical"
                android:background="@android:color/transparent"
                android:layout_margin="14dp"
                android:paddingLeft="0dp"
                android:paddingRight="12dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:src="@drawable/atras_camara" />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_action_next" />

        </FrameLayout>
        <RelativeLayout
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="180dp">
                <ImageView
                    android:visibility="gone"
                    android:elevation="10dp"
                    android:id="@+id/flash_automatico"
                    android:layout_margin="12dp"
                    android:src="@drawable/flash_automatico"
                    android:background="@android:color/transparent"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
                <ToggleButton
                    android:id="@+id/flash"
                    android:visibility="visible"
                    android:layout_margin="12dp"
                    android:textColor="@android:color/transparent"
                    android:background="@drawable/camara_flash"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
                <ToggleButton
                    android:id="@+id/refresh"
                    android:layout_margin="12dp"
                    android:textColor="@android:color/transparent"
                    android:background="@drawable/camara_actualizar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
                <ToggleButton
                    android:id="@+id/grid"
                    android:layout_margin="12dp"
                    android:textColor="@android:color/transparent"
                    android:background="@drawable/camara_grilla"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:alpha="0.8"
            android:background="#cc000000"
            android:orientation="horizontal">

            <ToggleButton
                android:textColor="@android:color/transparent"
                android:id="@+id/take"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/camarafooter"
                android:padding="20dp"
                android:src="@drawable/ic_take_photo" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/superior"
                    android:src="@drawable/superior_icon_camara"
                    android:layout_width="62dp"
                    android:layout_height="62dp"/>
                <TextView
                    android:id="@+id/text_superior"
                    android:layout_gravity="center_horizontal"
                    android:text="Superior"
                    android:textColor="@color/celeste_glup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/medio"
                    android:visibility="gone"
                    android:src="@drawable/medio_icon_camara"
                    android:layout_width="58dp"
                    android:layout_height="58dp"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_medio"
                    android:layout_gravity="center_horizontal"
                    android:text="Medio"
                    android:textColor="@color/celeste_glup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageButton
                android:visibility="gone"
                android:id="@+id/flashBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:background="@android:color/transparent"
                android:padding="20dp"
                android:src="@drawable/ic_action_flash" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="left|center_vertical">
                <LinearLayout
                    android:id="@+id/preview_frame"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left|center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:id="@+id/icon_preview"
                        android:clickable="false"
                        android:src="@drawable/preview_camara"
                        android:layout_width="56dp"
                        android:layout_height="56dp"/>
                    <TextView
                        android:id="@+id/text_icon_preview"
                        android:layout_gravity="center_horizontal"
                        android:text="Vista previa"
                        android:textColor="@color/celeste_glup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageb"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="left|center"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="15dp"
                    android:adjustViewBounds="true"
                    android:padding="1dp"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imagea"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="45dp"
                    android:adjustViewBounds="true"
                    android:padding="1dp"
                    android:scaleType="centerInside"
                    android:visibility="gone" />
            </FrameLayout>

        </FrameLayout>
    </RelativeLayout>

</FrameLayout>