<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/dialog_selector"
    android:padding="@dimen/dialog_body"
    android:layout_height="match_parent">

    <TextView
        android:textSize="14sp"
        android:text="@string/content_confirmation_reserva"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        android:id="@+id/validator_send_code"
        android:visibility="invisible"
        android:layout_gravity="left"
        android:text="ContraseÃ±as no coinciden"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/negro"
            android:id="@+id/code_confirm_reserva"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_for_confirm_reserva"
            android:background="@drawable/button_selector"
            android:textColor="@color/celeste_glup"
            android:text="OK"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>