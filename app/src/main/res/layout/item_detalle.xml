<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/card_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:orientation="horizontal">

                <TextView
                    android:textSize="14sp"
                    android:textAllCaps="true"
                    android:id="@+id/item_marca_prenda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Marca"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black" />

                <CheckBox
                    android:id="@+id/check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/modelo_prenda"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|top"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="Modelo"
                android:textSize="28sp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/item_imagen_prenda"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerInside"
                android:src="@drawable/progress_animator" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/corazon_prenda"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/corazon_glup"
                        android:gravity="center"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:textColor="@color/rojo_glup"
                        android:id="@+id/contador_corazon"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="3"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView

                    android:visibility="visible"
                    android:id="@+id/precio_prenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="5dp"
                    android:text="S/. 150"
                    android:textSize="21sp" />
                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_detalle"
                    android:padding="6dp"
                    android:drawablePadding="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/celeste_glup"
                    android:background="@drawable/button_selector"
                    android:text="Detalles"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|bottom"/>
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/frame_btn_info"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <Button
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:drawablePadding="6dp"
            android:textAllCaps="false"
            android:shadowColor="@color/azul_glup"
            android:background="@drawable/button_selector"
            android:textColor="@color/celeste_glup"
            android:id="@+id/btn_info"
            android:text="Detalles"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>



