<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_below="@+id/ticket_tienda"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/iconoticket_off"
            android:layout_marginLeft="10dp"
            android:id="@+id/image_ticket"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <TextView
            android:id="@+id/code_ticket"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/celeste_glup"
            android:textSize="24sp"
            android:text="#DEMO000001"
            android:layout_toRightOf="@+id/image_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/total_ticket"
            android:layout_margin="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/celeste_glup"
            android:textSize="24sp"
            android:text="S/.140"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
</LinearLayout>